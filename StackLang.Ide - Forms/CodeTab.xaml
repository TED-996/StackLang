<UserControl x:Class="StackLang.Ide.CodeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:avalon="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
			 xmlns:sli="clr-namespace:StackLang.Ide"
             mc:Ignorable="d" 
             d:DesignHeight="541" d:DesignWidth="614.4">
	<UserControl.CommandBindings>
		<CommandBinding Command="{x:Static sli:CodeTab.BreakpointToggle}" Executed="OnBreakpointToggle" />
	</UserControl.CommandBindings>
	<DockPanel>
		<DockPanel DockPanel.Dock="Bottom">
			<Label Content="Toggle Breakpoint:" />
			<TextBox Name="BreakpointTextBox" PreviewTextInput="OnBreakpointTextInputPreview">
				<TextBox.InputBindings>
					<KeyBinding Key="Enter" Command="{x:Static sli:CodeTab.BreakpointToggle}" />
				</TextBox.InputBindings>
			</TextBox>
		</DockPanel>
		<avalon:TextEditor Name="TextBox" FontFamily="Consolas" Margin="0" FontSize="10pt" ShowLineNumbers="True"
		                   TextChanged="OnTextChanged" DockPanel.Dock="Top"/>
	</DockPanel>
</UserControl>
